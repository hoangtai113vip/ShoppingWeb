@model List<ShoppingWeb.Models.Products>

    @*
        For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
    *@

    @if (Model.Count > 0)
 {
    <table class="table table-striped" width="100%">
        <tr class="table-info">
            <th style="text-align:center; width:20%"></th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().ProductId"></label>
            </th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().ProductName"></label>
            </th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().Quatity"></label>
            </th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().UnitPrice"></label>
            </th>
            <th style="text-align:center;"></th>
        </tr>
        @foreach (var item in Model)
     {
        <tr style="padding:50px;">
            <td>
                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.ProductId">
                    <img src="@item.Product.Image" width="100%" style="margin:auto; display:block; border-radius:5px; border:1px solid #bbb9b9;" />
                </a>
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(c => item.ProductId)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(c => item.Name)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(c => item.Quatity)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(c => item.UnitPrice)
            </td>
            <td style="text-align:center">
                <button type="submit" class="btn btn-danger" asp-action="remove" asp-route-id="@item.ProductId">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </td>
        </tr>

      }
    </table>
 }
 else
 {
    <div>No items added to the shopping cart...</div>
 }
